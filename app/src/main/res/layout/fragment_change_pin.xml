<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2E7D32">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#8BC34A"
        android:paddingHorizontal="40dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/secure_notes_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/secure_notes_icon_description"
            android:scaleType="fitCenter"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/text_change_pin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_your_pin"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/text_current_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_pin"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/et_current_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:maxLength="6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#000000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_new_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_pin"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/et_new_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:maxLength="6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#000000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_confirm_new_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_new_pin"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <EditText
                android:id="@+id/et_confirm_new_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textAlignment="center"
                android:maxLength="6" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#000000"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_change_pin_confirm"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_red"
            android:paddingVertical="12dp" />
    </LinearLayout>
</LinearLayout>