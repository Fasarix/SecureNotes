<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SecureNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="actionModeStyle">@style/MyActionMode</item>
    </style>

    <style name="MyActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/green_dark</item>
        <item name="titleTextStyle">@style/MyActionModeTitleText</item>
    </style>

    <style name="MyActionModeTitleText" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>